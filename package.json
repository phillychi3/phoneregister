{
	"name": "phoneregister-electron",
	"version": "0.0.1",
	"description": "手機號碼登記系統 - Electron 桌面應用程式",
	"main": "electron/main.cjs",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"electron:dev": "concurrently \"pnpm dev\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
		"electron:pack": "pnpm build && electron-builder --publish=never",
		"electron:dist": "pnpm build && electron-builder --publish=always",
		"electron:preview": "pnpm build && NODE_ENV=production electron ."
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^5.1.1",
		"@types/better-sqlite3": "^7.6.13",
		"autoprefixer": "^10.4.22",
		"concurrently": "^9.2.1",
		"electron": "^38.7.2",
		"electron-builder": "^26.0.12",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^9.1.2",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.15.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.45.5",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^3.4.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1",
		"vite": "^6.4.1",
		"wait-on": "^9.0.3"
	},
	"dependencies": {
		"better-sqlite3": "^12.5.0",
		"bindings": "^1.5.0",
		"canvas-confetti": "^1.9.4",
		"gsap": "^3.13.0"
	},
	"pnpm": {
		"overrides": {
			"rollup": "npm:@rollup/wasm-node"
		},
		"onlyBuiltDependencies": [
			"better-sqlite3",
			"electron",
			"electron-winstaller",
			"esbuild"
		],
		"ignoredBuiltDependencies": [
			"electron",
			"electron-winstaller"
		]
	},
	"build": {
		"appId": "com.phoneregister.app",
		"productName": "手機號碼登記系統",
		"directories": {
			"output": "dist"
		},
		"files": [
			"build/**/*",
			"electron/**/*",
			"node_modules/**/*",
			"package.json"
		],
		"extraResources": [
			{
				"from": "phones.db",
				"to": "phones.db"
			}
		],
		"mac": {
			"category": "public.app-category.utilities",
			"target": "dmg"
		},
		"win": {
			"target": "nsis"
		},
		"linux": {
			"target": "AppImage"
		}
	}
}
